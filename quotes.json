[
  {
    "id": 1,
    "text": "من كثر كلامه كثر خطؤه.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 2,
    "text": "خير الكلام ما قل ودل.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 3,
    "text": "العقل حفظ التجارب.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 4,
    "text": "لا تستح من إعطاء القليل، فإن الحرمان أقل منه.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 5,
    "text": "عليك بالصدق، فإنه منجاة.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 6,
    "text": "التقوى رأس كل حكمة.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 7,
    "text": "المرء مخبوء تحت لسانه.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 8,
    "text": "دواءك فيك وما تشعر، وداؤك منك وما تبصر.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 9,
    "text": "الناس أعداء ما جهلوا.",
    "author": "الإمام علي عليه السلام"
  },
  {
    "id": 10,
    "text": "إذا قدرت على عدوك فاجعل العفو عنه شكرًا للقدرة عليه.",
    "author": "الإمام علي عليه السلام"
  }
]